<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bottombar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_layout_background"
    tools:context="${relativePackage}.${activityClass}" >

    <com.chn.halo.view.bottomtabbar.HaloViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.chn.halo.view.bottomtabbar.HaloViewPager>

    <com.chn.halo.view.bottomtabbar.BottomTextViewGroup
        android:id="@+id/bottom_tab_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_tab_height"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_bar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.chn.halo.view.bottomtabbar.SelectableBottomTextView
            android:id="@+id/bottom_tab_home"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/bottom_tab_drawable_padding"
            android:gravity="center"
            android:text="@string/bottom_home"
            bottombar:default_selected="true"
            bottombar:icon_selected_color_filter="@color/bottom_tab_selected"
            bottombar:icon_unselected_color_filter="@color/bottom_tab_default"
            bottombar:selected_icon="@drawable/icon_home"
            bottombar:text_selected_color="@color/bottom_tab_selected"
            bottombar:text_unselected_color="@color/bottom_tab_default"
            bottombar:unselected_icon="@drawable/icon_home" />

        <com.chn.halo.view.bottomtabbar.SelectableBottomTextView
            android:id="@+id/bottom_tab_account"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/bottom_tab_drawable_padding"
            android:gravity="center"
            android:text="@string/bottom_account"
            bottombar:icon_selected_color_filter="@color/bottom_tab_selected"
            bottombar:icon_unselected_color_filter="@color/bottom_tab_default"
            bottombar:selected_icon="@drawable/icon_account"
            bottombar:text_selected_color="@color/bottom_tab_selected"
            bottombar:text_unselected_color="@color/bottom_tab_default"
            bottombar:unselected_icon="@drawable/icon_account" />

        <com.chn.halo.view.bottomtabbar.SelectableBottomTextView
            android:id="@+id/bottom_tab_more"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/bottom_tab_drawable_padding"
            android:gravity="center"
            android:text="@string/bottom_more"
            bottombar:icon_selected_color_filter="@color/bottom_tab_selected"
            bottombar:icon_unselected_color_filter="@color/bottom_tab_default"
            bottombar:selected_icon="@drawable/icon_more"
            bottombar:text_selected_color="@color/bottom_tab_selected"
            bottombar:text_unselected_color="@color/bottom_tab_default"
            bottombar:unselected_icon="@drawable/icon_more" />
    </com.chn.halo.view.bottomtabbar.BottomTextViewGroup>

</RelativeLayout>